---
const { id, title, content, created, expires } = Astro.props;

interface Props {
  id: number;
  title: string;
  content: string;
  created: string;
  expires: string;
}
---

<div
  class="container flex flex-col space-y-2 justify-between border-2 border-ctp-flamingo rounded-lg text-lg shadow-ctp-teal shadow-md"
>
  <div
    class="flex justify-between items-center bg-ctp-mantle p-4 border-b-2 border-b-ctp-flamingo rounded-t-lg"
  >
    <span
      class="absolute mx-auto py-1 flex border w-fit bg-gradient-to-r blur-xl from-ctp-blue via-ctp-teal to-ctp-pink bg-clip-text text-3xl box-content font-extrabold text-transparent text-center select-none"
    >
      {title}
    </span>
    <h1
      class="relative top-0 w-fit h-auto py-1 justify-center flex bg-gradient-to-r items-center from-ctp-blue via-ctp-teal to-ctp-pink bg-clip-text text-3xl font-extrabold text-transparent text-center select-auto"
    >
      {title}
    </h1>
    <p class="text-ctp-sky font-bold">#{id}</p>
  </div>
  <div class="flex-1 p-4"><pre>{content}</pre></div>
  <div
    class="flex justify-between items-center bg-ctp-mantle p-4 border-t-2 border-t-ctp-flamingo rounded-b-lg"
  >
    <p class="text-ctp-sky font-bold">Created: {created}</p>
    <p class="text-ctp-sky font-bold">Expires: {expires}</p>
  </div>
</div>
