---
import Navbar from "./Navbar.astro";
const { title } = Astro.props;

interface Props {
  title: string;
}
---

<header
  class="w-full"
>
  <div class="container mx-auto px-4 max-w-screen-2xl">
    <div class="flex place-content-center">
      <h1
        class="text-4xl font-bold m-4 bg-gradient-to-r from-ctp-blue via-ctp-mauve to-ctp-lavender text-transparent bg-clip-text"
      >
        {title}
      </h1>
    </div>
    <Navbar />
  </div>
</header>
